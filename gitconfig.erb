[user]
    name = <%= print("Git Name: "); STDOUT.flush; STDIN.gets.chomp %>
    email = <%= print("Git Mail: "); STDOUT.flush; STDIN.gets.chomp %>

[core]
    excludes = <%= ENV['HOME'] %>/.gitignore
    quotepath = false

[github]
    token = <%= print("GitHub Token: "); STDOUT.flush; STDIN.gets.chomp %>
    user = <%= print("GitHub User: "); STDOUT.flush; STDIN.gets.chomp %>

[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto

[alias]
    co = checkout
    ci = commit
    st = status
    ff = merge --ff-only @{u}

    log-graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    log-short = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d %Cblue%an <%ae> %Cgreen(%cr)%Creset%n  %s%n  %b'

    conflicts = !git ls-files --unmerged | cut -c51- | sort -u | xargs $EDITOR
    resolve = !git ls-files --unmerged | cut -c51- | sort -u | xargs git add

